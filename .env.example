# PrepMaster Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Database
# ===========================================
DATABASE_URL=postgresql://user:password@host:5432/database

# ===========================================
# REQUIRED - Supabase Authentication
# ===========================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# REQUIRED - Application Settings
# ===========================================
NODE_ENV=production
PORT=5000

# Frontend URL for redirects and CORS (e.g., https://prepmaster.ng)
FRONTEND_URL=https://your-domain.com

# Comma-separated list of allowed CORS origins
# Include localhost for development and your production domain
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,http://localhost:5173

# ===========================================
# REQUIRED - Payment (Paystack)
# ===========================================
# Your Paystack Secret Key (sk_test_... or sk_live_...)
PAYSTACK_SECRET_KEY=sk_test_...
# Optional: Set in Paystack Dashboard and copy here to secure webhooks
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret
PAYSTACK_BASE_URL=https://api.paystack.co

# ===========================================
# OPTIONAL - Admin Configuration
# ===========================================
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@example.com

# ===========================================
# OPTIONAL - Session Configuration
# ===========================================
SESSION_SECRET=your-secure-session-secret-min-32-chars
RESEND_API_KEY=re_123456789
